\mode<presentation>

% Theme colors
\definecolor{ALICE}{HTML}{D20007}
\definecolor{ABlue}{HTML}{2F3C47}
\definecolor{AOrange}{HTML}{EF7B0A}
\definecolor{ARed}{HTML}{D20006}

% Normal text
\setbeamercolor{normal text}{fg=black}

% First page
\setbeamercolor*{title}{fg=ARed,bg=gray}
\setbeamercolor*{author}{fg=black,bg=gray}
\setbeamercolor*{date}{fg=black,bg=gray}

% Generic frames header and footer
\setbeamercolor{titlelike}{fg=black}
\setbeamercolor*{frametitle}{fg=black}
\setbeamercolor*{framesubtitle}{fg=black}
\setbeamercolor*{title in head/foot}{fg=black}
\setbeamercolor*{author in head/foot}{fg=black}

%Blocks
\setbeamercolor{block title}{bg=ABlue,fg=white}
\setbeamercolor{block title alerted}{bg=AOrange,fg=white}
\setbeamercolor{block title example}{bg=ABlue,fg=white}
\setbeamercolor{block body}{bg=ABlue!15,fg=black}
\setbeamercolor{block body alerted}{bg=AOrange!20,fg=black}
\setbeamercolor{block body example}{bg=ABlue!20,fg=black}

% Lists
\setbeamercolor*{item}{fg=ABlue}

% Quotation and quote
\setbeamercolor*{quotation}{fg=black,bg=ABlue!10}

% Verse
\setbeamercolor*{verse}{fg=black,bg=ABlue!10}

% Abstract
\setbeamercolor*{abstract}{fg=black,bg=ABlue!10}

% Table of contents 
\setbeamercolor*{structure}{fg=black}

% Bibliography
\setbeamercolor*{bibliography entry title}{fg=black}
\setbeamercolor*{bibliography entry author}{fg=black}
\setbeamercolor*{bibliography entry location}{fg=black!50}
\setbeamercolor*{bibliography entry note}{fg=black!50}

\mode
<all>
